<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
        !-- Main theme colors -->
	    <!--   your app branding color for the app bar -->
	    <item name="android:colorPrimary">@color/primaryDef</item>
	    <!--   darker variant for the status bar and contextual app bars -->
	    <item name="android:colorPrimaryDark">@color/primaryDarkDef</item>
	    <!--   theme UI controls like checkboxes and text fields -->
	    <item name="android:colorAccent">@color/primaryDef</item>
	   	<item name="android:navigationBarColor">@color/primaryDef</item>
	   	<!-- <item name="android:windowBackground">@color/primaryTextColor</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
